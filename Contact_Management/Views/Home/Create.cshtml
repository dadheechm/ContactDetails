@model Contact_Management.Models.ContactModel
@{
    ViewBag.Title = "Create Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container well">

    @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <h4>Create Contact</h4><br/>
        <div class="form-group">
            <div class="row">
                <div class="col-md-9  text-center">
                    <div class="col-md-3 text-right">
                        @Html.LabelFor(model => model.FirstName)
                    </div>
                    <div class="col-md-6 text-left">
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "textBox form-control" })
                        @Html.ValidationMessageFor(model => model.FirstName)
                    </div>
                </div>

            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-9  text-center">
                    <div class="col-md-3 text-right">
                        @Html.LabelFor(model => model.LastName)
                    </div>
                    <div class="col-md-6 text-left">
                        @Html.TextBoxFor(model => model.LastName, new { @class = "textBox form-control" })
                        @Html.ValidationMessageFor(model => model.LastName)
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-9  text-center">
                    <div class="col-md-3 text-right">
                        @Html.LabelFor(model => model.Email)
                    </div>
                    <div class="col-md-6 text-left">
                        @Html.TextBoxFor(model => model.Email, new { @class = "textBox form-control" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
            </div>

        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-9  text-center">
                    <div class="col-md-3 text-right">
                        @Html.LabelFor(model => model.PhoneNumber)
                    </div>
                    <div class="col-md-6 text-left">
                        @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "textBox form-control" })
                        @Html.ValidationMessageFor(model => model.PhoneNumber)
                    </div>
                </div>
            </div>
        </div>
        <div class="form-actions">            
            <button type="submit" class="btn btn-primary">Submit</button>
            @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-danger" })
        </div>
    }
</div>